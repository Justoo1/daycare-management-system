# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=nkabom_daycare
DB_SYNC=true

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=24h

# Multi-tenant Configuration
TENANT_HEADER=x-tenant-id

# File Storage Configuration
S3_BUCKET=nkabom-files
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Notification Services
# Arkesel SMS (Primary SMS provider for Ghana)
ARKESEL_API_KEY=your-arkesel-api-key
ARKESEL_SENDER_ID=Nkabom

# Twilio (Backup SMS provider)
TWILIO_ACCOUNT_SID=your-twilio-account
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid (Email provider)
SENDGRID_API_KEY=your-sendgrid-key
SENDGRID_FROM_EMAIL=noreply@nkabom.app

# Firebase (Push notifications)
FIREBASE_PROJECT_ID=your-firebase-project
FIREBASE_PRIVATE_KEY=your-firebase-key
FIREBASE_CLIENT_EMAIL=your-firebase-email

# Payment Gateway Configuration
PAYSTACK_PUBLIC_KEY=your-paystack-public
PAYSTACK_SECRET_KEY=your-paystack-secret

# MTN Mobile Money Configuration
MTN_API_KEY=your-mtn-api-key
MTN_API_USER=your-mtn-user

# Ghana-Specific Configuration
DEFAULT_CURRENCY=GHS
GHANA_PHONE_PREFIX=+233
