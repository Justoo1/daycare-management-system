{
  "name": "nkabom-daycare-api",
  "version": "0.1.0",
  "description": "Multi-tenant daycare management system API for Ghana",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/bootstrap.ts",
    "build": "tsc",
    "start": "node dist/bootstrap.js",
    "test": "jest tests/api/health.test.ts",
    "test:unit": "jest tests/unit",
    "test:e2e": "jest tests/e2e --runInBand",
    "test:integration": "jest tests/api --testPathIgnorePatterns=health",
    "test:all": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:health": "jest tests/api/health.test.ts",
    "test:auth": "jest tests/api/auth.test.ts",
    "test:tenant": "jest tests/api/tenant.test.ts",
    "test:children": "jest tests/api/children.test.ts",
    "test:attendance": "jest tests/api/attendance.test.ts",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "daycare",
    "management",
    "multi-tenant",
    "ghana"
  ],
  "author": "Nkabom Team",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.943.0",
    "@aws-sdk/s3-request-presigner": "^3.943.0",
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.0",
    "@fastify/jwt": "^7.2.4",
    "@fastify/multipart": "^8.3.1",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^4.2.0",
    "axios": "^1.13.2",
    "bcrypt": "^5.1.0",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.0",
    "fastify-plugin": "^4.5.0",
    "jsonwebtoken": "^9.0.2",
    "paystack-node": "^0.3.0",
    "pg": "^8.10.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.28",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^20.4.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.44.0",
    "jest": "^30.2.0",
    "prettier": "^3.0.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.1.0"
  }
}
